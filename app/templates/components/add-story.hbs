<form>
  <div class="form-group">
    <label for="headline">Headline:</label>
    {{input class="form-control" value=headline id="headline"}}
  </div>
  <div class="form-group">
    <label for="byline">Author(s):</label>
    {{input class="form-control" value=byline id="byline"}}
  </div>
  <div class="form-group">
    <label for="posted">Posted:</label>
    {{input class="form-control" type="date" value=posted id="posted"}}
  </div>
  <div class="form-group">
    <label for="body">Article Text: </label>
    {{textarea rows="8" class="form-control" value=body id="body"}}
  </div>
  <div class="form-group">
    <label for="image">Image Source:</label>
    {{input class="form-control" value=image id="image" type="url"}}
  </div>
  <button class='btn btn-success btn-lg' {{action 'save1'}}>Save Story</button>
</form>
